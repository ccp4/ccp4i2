# Example configuration for Azure AD authentication
# Copy this file to .env.local and fill in your values to enable authentication

NEXT_PUBLIC_API_BASE_URL=http://server:8000

# Enable Azure AD/MSAL authentication
NEXT_PUBLIC_REQUIRE_AUTH=true

# Azure AD application configuration
# Register an app at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
NEXT_PUBLIC_AAD_CLIENT_ID=your-client-id-here
NEXT_PUBLIC_AAD_TENANT_ID=your-tenant-id-here

{
  "name": "ccp4i2-django",
  "type": "module",
  "main": "dist/main.js",
  "version": "0.0.1",
  "author": {
    "name": "CCP4 Developers",
    "email": "martin.noble@newcastle.ac.uk"
  },
  "license": "BSD-3-Clause",
  "description": "CCP4i2 Electron application",
  "scripts": {
    "copy-rdkit-minimal": "copyfiles -u 4 node_modules/@rdkit/rdkit/dist/* renderer/public/",
    "copy-moorhen-base": "copyfiles -u 2 node_modules/moorhen/public/* renderer/",
    "copy-moorhen-dirs": "copyfiles -u 2 node_modules/moorhen/public/**/* renderer/",
    "copy-moorhen-pixmaps": "copyfiles -u 2 node_modules/moorhen/public/baby-gru/pixmaps/* renderer/",
    "copy-moorhen-tutorials": "copyfiles -u 2 node_modules/moorhen/public/baby-gru/tutorials/* renderer/",
    "copy-moorhen-monomers-base": "copyfiles -u 2 node_modules/moorhen/public/baby-gru/monomers/* renderer/",
    "copy-moorhen-monomers": "copyfiles -u 2 node_modules/moorhen/public/baby-gru/monomers/**/* renderer/",
    "copy-report-files-base": "copyfiles -u 1 assets/report_files/* renderer/public/",
    "copy-report-files": "copyfiles -u 1 assets/report_files/**/* renderer/public/",
    "copy-qticons": "copyfiles -u 4 ../server/ccp4i2/qticons/* renderer/public/qticons/",
    "copy-svgicons": "copyfiles -u 4 ../server/ccp4i2/svgicons/* renderer/public/svgicons/",
    "copy-assets": "npm run copy-rdkit-minimal && npm run copy-moorhen-base && npm run copy-moorhen-dirs && npm run copy-moorhen-pixmaps && npm run copy-moorhen-tutorials && npm run copy-moorhen-monomers-base && npm run copy-moorhen-monomers && npm run copy-report-files-base && npm run copy-report-files && npm run copy-qticons && npm run copy-svgicons",
    "electron-postinstall": "electron-builder install-app-deps",
    "build": "npm run build:electron",
    "start": "npm run start:electron",
    "build:electron": "npm run electron-postinstall && cross-env BUILD_TARGET=electron npm run copy-assets && next build renderer && vite build --config vite.electron.config.ts && vite build --config vite.preload.config.ts",
    "start:electron": "npm run electron-postinstall && cross-env BUILD_TARGET=electron npm run copy-assets && vite build --config vite.electron.config.ts && vite build --config vite.preload.config.ts && electron dist/main.js",
    "build:web": "cross-env BUILD_TARGET=web npm run copy-assets && cd renderer && next build",
    "start:web": "cross-env BUILD_TARGET=web npm run copy-assets && cd renderer && next dev",
    "export:web": "cross-env BUILD_TARGET=web npm run build:web && cd renderer && next export",
    "package-mac": "npm run build:electron && electron-builder",
    "package-win": "npm run build:electron && electron-builder --win",
    "package-linux-x64": "npm run build:electron && electron-builder --linux AppImage --x64",
    "package-linux-arm64": "npm run build:electron && electron-builder --linux AppImage --arm64",
    "package-linux-all": "npm run build:electron && electron-builder --linux AppImage --x64 --arm64"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.24.1",
    "@azure/msal-react": "^3.0.20",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@rdkit/rdkit": "^2025.3.3-1.0.0",
    "acorn": "^8.15.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cytoscape": "^3.33.1",
    "cytoscape-cose-bilkent": "^4.1.0",
    "detect-port": "^2.1.0",
    "electron-store": "^8.2.0",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "jquery": "^3.7.1",
    "moorhen": "^0.22.0-beta.10",
    "next": "^15.3.0",
    "react": "19.1.0",
    "react-cytoscapejs": "^2.0.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "typescript": "latest",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@electron/packager": "^18.3.6",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.6",
    "@mui/material-nextjs": "^6.1.6",
    "@mui/x-tree-view": "^7.26.0",
    "@reduxjs/toolkit": "^2.8.1",
    "@types/chart.js": "^4.0.1",
    "@types/cytoscape": "^3.21.9",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.1",
    "@types/jquery": "^3.5.32",
    "@types/node": "^22.8.7",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^4.4.1",
    "chart.js": "^4.4.8",
    "chartjs-plugin-annotation": "^3.1.0",
    "concurrently": "latest",
    "electron": "^33.4.11",
    "electron-builder": "latest",
    "http-proxy-middleware": "^3.0.5",
    "install": "^0.13.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "npm": "^11.3.0",
    "react-chartjs-2": "^5.3.0",
    "react-resizable-panels": "^2.1.7",
    "swr": "^2.3.3",
    "uuid": "^11.0.5",
    "vite": "latest",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "asarUnpack": [
    "node_modules/next"
  ],
  "build": {
    "appId": "com.ccp4.ccp4i2-django",
    "productName": "ccp4i2-django",
    "icon": "assets/ccp4i2.png",
    "files": [
      "dist/**",
      "renderer/.next/**",
      "!renderer/.next/cache",
      "!renderer/.next/cache/**/*",
      "renderer/public/**",
      "scripts/start-next.js",
      "node_modules/detect-port/**"
    ],
    "extraResources": [
      {
        "from": "../server/",
        "to": "server"
      },
      {
        "from": "../ccp4i2/baselayer/",
        "to": "ccp4i2/baselayer"
      },
      {
        "from": "../core/",
        "to": "ccp4i2/core"
      },
      {
        "from": "../wrappers/",
        "to": "ccp4i2/wrappers"
      },
      {
        "from": "../wrappers2/",
        "to": "ccp4i2/wrappers2"
      },
      {
        "from": "../pipelines/",
        "to": "ccp4i2/pipelines"
      },
      {
        "from": "../pimple/",
        "to": "ccp4i2/pimple"
      },
      {
        "from": "../report/",
        "to": "ccp4i2/report"
      },
      {
        "from": "../utils/",
        "to": "ccp4i2/utils"
      },
      {
        "from": "../stubs/",
        "to": "ccp4i2/stubs"
      },
      {
        "from": "../tasks/",
        "to": "ccp4i2/tasks"
      },
      {
        "from": "../smartie/",
        "to": "ccp4i2/smartie"
      },
      {
        "from": "../data/",
        "to": "ccp4i2/data"
      },
      {
        "from": "../qticons/",
        "to": "ccp4i2/qticons"
      },
      {
        "from": "../svgicons/",
        "to": "ccp4i2/svgicons"
      },
      {
        "from": "node_modules/react",
        "to": "node_modules/react",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/next",
        "to": "node_modules/next",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/detect-port",
        "to": "node_modules/detect-port",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "compression": "store"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    }
  },
  "overrides": {
    "@swc/helpers": "0.5.17"
  },
  "optionalDependencies": {
    "@emnapi/core": "^1.8.1",
    "@emnapi/wasi-threads": "^1.1.0",
    "@tybys/wasm-util": "^0.10.1"
  }
}

<?xml version='1.0' encoding='ASCII'?>
<ccp4:ccp4i2 xmlns:ccp4="http://www.ccp4.ac.uk/ccp4ns">
  <ccp4i2_header>
    <function>PARAMS</function>
    <pluginName>refmac_wrk</pluginName>
  </ccp4i2_header>
  <ccp4i2_body>
    <inputData>
      <XYZIN>
        <project>FULLPATH</project>
        <relPath>/Applications/ccp4-6.2.0/examples/data</relPath>
        <baseName>insulin_2bn3.pdb</baseName>
      </XYZIN>
      <HKLIN>
        <project>FULLPATH</project>
        <relPath>/Applications/ccp4-6.2.0/examples/data</relPath>
        <baseName>SSADinsulin.mtz</baseName>
      </HKLIN>
      <FOBS>
        <FP>F_CuKa</FP>
        <Sigma>SIGF_CuKa</Sigma>
      </FOBS>
      <FREERFLAG>
        <FREE>FreeR_flag</FREE>
      </FREERFLAG>
    </inputData>
    <controlParameters>
      <REFINE_TYPE>RIGID</REFINE_TYPE>
      <RIGID_NCYCLES>10</RIGID_NCYCLES>
      <RIGID_GROUP_LIST>
        <item>
          <segmentList>
            <item>
              <chain_id>A</chain_id>
              <residue_1>1</residue_1>
              <residue_2>21</residue_2>
            </item>
          </segmentList>
        </item>
        <item>
          <segmentList>
            <item>
              <chain_id>B</chain_id>
              <residue_1>1</residue_1>
              <residue_2>30</residue_2>
            </item>
          </segmentList>
        </item>
      </RIGID_GROUP_LIST>
      <MONI_VANDERWAALS>10.0</MONI_VANDERWAALS>
    </controlParameters>
  </ccp4i2_body>
</ccp4:ccp4i2>


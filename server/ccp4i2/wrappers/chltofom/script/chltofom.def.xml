<?xml version='1.0' encoding='ASCII'?>
<ccp4:ccp4i2 xmlns:ccp4="http://www.ccp4.ac.uk/ccp4ns">
    <ccp4i2_header>
        <function>DEF</function>
        <pluginName>chltofom</pluginName>
    </ccp4i2_header>
    <ccp4i2_body id="chltofom">
        <container id="inputData">
            <content id="HKLIN">
                <className>CPhsDataFile</className>
                <qualifiers>
                    <mustExist>True</mustExist>
                    <allowUndefined>False</allowUndefined>
                </qualifiers>
            </content>
        </container>
        <container id="outputData">
            <content id="HKLOUT">
                <className>CPhsDataFile</className>
                <qualifiers>
                    <saveToDb>True</saveToDb>
                </qualifiers>
            </content>
        </container>
        <container id="controlParameters">
            <content id="OUTPUTMINIMTZ">
                <className>CBoolean</className>
                <qualifiers>
                    <default>True</default>
                    <toolTip>Convert output to a mini-MTZ</toolTip>
                    <guiLabel>Convert output to a mini-MTZ</guiLabel>
                </qualifiers>
            </content>
            <content id="DIRECTION">
                <className>CString</className>
                <qualifiers>
                    <onlyEnumerators>True</onlyEnumerators>
                    <enumerators>HLTOFOM,FOMTOHL</enumerators>
		    <menuText>Hendrickson-Latmann to Phi/FOM, Phi/FOM to Hendrickson-Latmann</menuText>
                    <default>HLTOFOM</default>
                </qualifiers>
            </content>
        </container>
    </ccp4i2_body>
</ccp4:ccp4i2>
